<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="bap.uit.com.bap.Jesuis"
    android:background="@drawable/fond">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="450px"
        android:id="@+id/logo"
        android:src="@mipmap/titre"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Je suis un Barbier"
        android:id="@+id/reserver"
        android:background="@drawable/rose"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/logo"
        android:layout_alignEnd="@+id/logo"
        android:onClick="doBarbier" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Je suis un Barbu"
        android:id="@+id/lister"
        android:textColor="#ffffff"
        android:onClick="doClient"
        android:background="@drawable/rose"
        android:layout_below="@+id/reserver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/reserver"
        android:layout_alignEnd="@+id/reserver" />


</RelativeLayout>
