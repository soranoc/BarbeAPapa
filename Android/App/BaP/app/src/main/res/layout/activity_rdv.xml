<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="bap.uit.com.bap.RDV"
    android:background="@drawable/fond">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="450px"
        android:id="@+id/imageView2"
        android:src="@mipmap/titre"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nom_barbier"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Barbier"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:layout_below="@+id/nom_barbier"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Date"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/heure"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Heure"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nom_barbier"
        android:layout_alignEnd="@+id/nom_barbier"
        android:background="@drawable/rose"
        android:textColor="#ffffff"
        android:onClick="doValide"/>

    <!--Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/pick_time"
        android:onClick="showTimePickerDialog" -->


</RelativeLayout>
